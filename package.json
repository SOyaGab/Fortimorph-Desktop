{
  "name": "fortimorph-desktop",
  "version": "1.2.0",
  "description": "FortiMorph - Adaptive Resource Scaling, Task Isolation, Intelligent Backup, and Data Integrity Enhancer",
  "main": "main/index.js",
  "author": "FortiMorph Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" --kill-others",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.2.0",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "firebase": "^12.4.0",
    "fs-extra": "^11.3.2",
    "node-notifier": "^10.0.1",
    "nodemailer": "^6.10.1",
    "pdf-lib": "^1.17.1",
    "pidusage": "^3.0.2",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.3.0",
    "sql.js": "^1.13.0",
    "systeminformation": "^5.27.11",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.fortimorph.desktop",
    "productName": "FortiMorph",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
