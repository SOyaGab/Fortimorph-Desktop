{
  "name": "fortimorph-desktop",
  "version": "1.2.1",
  "description": "FortiMorph - Adaptive Resource Scaling, Task Isolation, Intelligent Backup, and Data Integrity Enhancer",
  "main": "main/index.js",
  "author": "FortiMorph Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" --kill-others",
    "dev:renderer": "vite",
    "dev:main": "set NODE_ENV=development&& wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:renderer": "vite build",
    "build:win": "vite build && electron-builder --win",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux",
    "rebuild": "electron-rebuild -f -w canvas,sharp,bcrypt",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky install",
    "sync-db": "powershell -ExecutionPolicy Bypass -File ./sync-database.ps1"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fast-glob": "^3.3.3",
    "firebase": "^12.4.0",
    "fs-extra": "^11.3.2",
    "jsqr": "^1.4.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.548.0",
    "mammoth": "^1.11.0",
    "marked": "^16.4.1",
    "node-notifier": "^10.0.1",
    "nodemailer": "^6.10.1",
    "os-utils": "^0.0.14",
    "pdf-lib": "^1.17.1",
    "pdf2json": "^4.0.0",
    "pdfkit": "^0.17.2",
    "pidusage": "^3.0.2",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.2.3",
    "recharts": "^3.3.0",
    "recycle-bin": "^0.1.3",
    "sql.js": "^1.13.0",
    "systeminformation": "^5.27.11",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3",
    "worker-threads-pool": "^2.0.0"
  },
  "optionalDependencies": {
    "bcrypt": "^5.1.1",
    "canvas": "^3.2.0",
    "html-pdf-node": "^1.0.8",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.fortimorph.desktop",
    "productName": "FortiMorph",
    "copyright": "Copyright Â© 2025 FortiMorph Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**/*",
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FortiMorph"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null
    },
    "dmg": {
      "title": "FortiMorph Installer",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "maintainer": "FortiMorph Team"
    }
  }
}
